<% layout("/layouts/biolerplate") %>
<body >
    <div class="login-container" style="">
        <div class="form-div">
            <h5>Admin Login</h5>
            <form action="/admin/homepage" method="post" novalidate class="needs-validation">
            <div>
               
                <input type="text" name="username" class="form-control mb-0" placeholder="username" required>
                <div class="invalid-feedback">Please enter username</div>
            </div>
            
             <div >
               <input type="password" name="password" class="form-control password mb-0" placeholder="Password" required>
               
               <div class="invalid-feedback" >Please enter password</div>
               <span class="eye-on" style="position:relative; top:-30px; left:80%; display: none;"><i class="fas fa-eye icon"></i></span>
            </div>

            <!-- <div>
                <label for="show-pass">Show password</label>
                <input type="checkbox" id="show-pass">
            </div> -->

            <button class="btn  submit-btn mt-4" style="background-color: rgb(172, 36, 221); color:white;">Login</button>
        </form>
        </div>        
    </div>
    
    <script>

        const eyeBtn=document.querySelector(".eye-on");
        const eyeIcon=document.querySelector(".icon");
        const passwordInput=document.querySelector(".password");
        
        
        passwordInput.addEventListener("input",()=>{
             if(passwordInput.value===''){
                eyeBtn.style.display="none";
             }
             else 
              eyeBtn.style.display="inline";
        });

        // to show hide
        eyeBtn.addEventListener("click",()=>{
            if(passwordInput.type=="password"){
                passwordInput.type="text";
                eyeIcon.classList.remove("fa-eye");
                eyeIcon.classList.add("fa-eye-slash");
            }
            else{
                passwordInput.type="password";
                eyeIcon.classList.remove("fa-eye-slash");
                eyeIcon.classList.add("fa-eye");
            }
            
        });
    </script>
       
   
</body>
